% DEFAULT PAPER SETTINGS
% Ratio should be 16:9
\geometry{paperwidth=254mm,paperheight=143mm}

% Macros
\newcommand*{\inserttitlepage}[1][center]{%
{\setbeamertemplate{headline}{}
\setbeamertemplate{footline}{}
\setbeamertemplate{title page}[#1]
\setbeamercolor{background canvas}{use=title, bg=title.bg}
\frame[b]{\titlepage}}%
}

\newcommand*{\insertsectionpage}{%
{\setbeamertemplate{headline}{}
\setbeamertemplate{footline}{}
\setbeamercolor{background canvas}{use=section title, bg=section title.bg}
\frame[b]{\sectionpage}}%
}

\mode<all>